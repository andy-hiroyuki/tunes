doctype html
html(ng-app="App")

  head
    meta(charset="utf-8")
    title 多彩なコンセプトのフリー音楽素材 BGM「音の園」
    meta(name="description" content="革新的なレイアウトで探しやすい！ファンタジーRPGや恋愛アドベンチャー、ハードボイルドな探偵モノのノベルをはじめとする、様々なゲームにピッタリなフリー音楽素材を無料で公開しています。")
    meta(name="keywords" content="音楽素材,BGM,mp3,フリー,無料,ダウンロード,ファンタジー,RPG")
    include ./_layouts/head.jade

  body(layout="column" ng-controller="TuneCtrl as tune")

    div(flex layout="row")
      md-sidenav.site-sidenav.md-sidenav-left.md-whiteframe-z2(layout="column" md-component-id="left" md-is-locked-open="$mdMedia('gt-sm')")
        include ./_layouts/sidenav.jade

      #content(flex layout="column")

        include ./_layouts/about.jade

        include ./_layouts/player.jade

        md-content(flex layout="column" ng-show="useTracks")
          #tracklistarea(flex layout="column" layout-fill)
            md-button.interval-btn(ng-click="updateState()" style="display:none;" aria-label="interval")
            md-content
              section.md-whiteframe-z1
                md-list(ng-show="tracklist")
                  .track(ng-repeat=("track in tracklist.tracks"))
                    md-list-item.md-3-line(flex)
                      md-button.btn-play.md-icon-button.md-fab.md-mini(aria-label="play" ng-click="tune.play($index+1, track)" ng-class="{active : tune.isPlaying(track)}" hide-sm)
                        i.material-icons(ng-if="tune.isPlaying(track)") pause
                        i.material-icons(ng-if="!tune.isPlaying(track)") play_arrow
                      md-button.btn-play.md-icon-button.md-fab.md-mini(ng-href="/download/{{track.id}}.html" target="_blank" aria-label="play" hide-gt-sm)
                        i.material-icons play_arrow
                      .md-list-item-text(ng-click="tune.play($index+1, track)")
                        h3
                          span.title(ng-bind="track.title")
                          .time(ng-bind="convertTime(track.time)")
                        p
                          md-button.tag(ng-repeat=("tag in track.tags") aria-label="{{tag}}") {{tag}}
                      md-button.md-raised.download(ng-href="/download/{{track.id}}.html" target="_blank" hide-sm)
                        i(class="material-icons") file_download
                        | ダウンロード
                      //- md-button(ng-click="toggleRight()" class="md-primary")
                      //-   span RIGHT
                    md-divider(ng-if="!$last")
      //- 
      //- md-sidenav(class="md-sidenav-right md-whiteframe-z2" md-component-id="right")
      //-   md-content(ng-controller="RightCtrl" layout-padding)
      //-     h3 Sidenav Right

    md-button.md-icon-button.md-fab.md-fab-bottom-right(ng-click="toggleSidenav('left')" hide-gt-sm)
      i(class="material-icons") menu



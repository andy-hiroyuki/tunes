html

  head
    meta(charset="utf-8")
    block title
    block meta
    include /app/_layouts/head.jade

  body#download

    header.nav-header
      a.docs-logo(href="#")
        img(src="/logo.png")
        h1.docs-logotype.md-heading 音の園
        h3.author music by ANDY
    
    .container
      .inner
        block track

      section(layout="row" layout-align="center center")
        button#download_btn.md-raised.md-accent.md-button.md-default-theme
